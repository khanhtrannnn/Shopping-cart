<h1>Edit Product</h1>

<%= form_for(@product) do |f| %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :unit_price %><br>
      <%= f.text_field :unit_price %>
    </p>

    <p>
      <%= f.label :amount %><br>
      <%= f.text_field :amount %>
    </p>

    <p>
      <%= f.submit 'Update' %>
    </p>

<% end %>

<%= link_to 'Back', product_index_path %>