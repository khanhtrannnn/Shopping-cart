<h1>Buy product</h1>

<%= session[:cart] %>

<table>
  <tr>
    <td>Name: <%= @list.name %></td>
  </tr>

  <tr>
    <td>Amount: <%= @list.amount %></td>
  </tr>

  <tr>
    <td>Unit_price: <%= @list.unit_price %></td>
  </tr>
</table>

<%= form_tag "/list/add/#{@list.id}" do %>
    Enter the amount : <%= number_field :product, :amount %>
    <%= submit_tag 'Confirm' %>
<% end %>

<%= link_to 'Back', '/main/main_page' %>